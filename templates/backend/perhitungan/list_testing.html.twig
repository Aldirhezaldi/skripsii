                </tr>
            </thead>
            <tbody>
                {# {{ include('data_training/_filters.html.twig', {filter: filter}) }}  #}
                    {% for data_test in data_test %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ data_test.JenisPengadaan }}</td>
                    <td>{{ data_test.SumberDana }}</td>
                    <td>{{ data_test.JenisKontrak }}</td>
                    <td>{{ data_test.Pagu}}</td>
                    <td>
                        <a class="btn btn-xs btn-outline-primary" href="{{ path('app_backend_perhitungan_show', {'id': data_test.id}) }}" data-toggle="modal" data-target="#modal">
                            <span class="fa fa-desktop"></span> {{ 'show'|trans }}
                        </a>
                        <a class="btn btn-xs btn-outline-warning" href="{{ path('app_backend_perhitungan_klasifikasi', {'id': data_test.id}) }}">
                            <span class="fa fa-edit"></span> {{ 'klasifikasi'|trans }}
                        </a>
                        <a class="btn btn-xs btn-outline-info" href="{{ path('app_backend_perhitungan_edit', {'id': data_test.id}) }}" data-toggle="modal" data-target="#modal">
                            <span class="fa fa-edit"></span> {{ 'edit'|trans }}
                        </a>
                            {{ include('backend/perhitungan/_delete_form.html.twig', {data_test: data_test}) }}
