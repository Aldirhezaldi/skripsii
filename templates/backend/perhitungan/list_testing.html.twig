{% block title %}
    <title>{{'testing'|trans}}</title>
{% endblock %}

{% block actions %}
    <div class="pull-right">
        <a class="btn btn-sm btn-outline-success" href="{{ path('app_backend_perhitungan_create') }}" data-toggle="modal" data-target="#modal">
        <span class="fa fa-plus"></span> {{ 'create'|trans }}</a>
    </div>
{% endblock %}
{% block content %}

  </form>
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>{{ 'No'|trans }}</th>
                    <th>{{ 'jenis_pengadaan'|trans }}</th>
                    <th>{{ 'sumber_dana'|trans }}</th>
                    <th>{{ 'jenis_kontrak'|trans }}</th>
                    <th>{{ 'pagu'|trans}}</th>
                    <th>{{ 'actions'|trans }}</th>
