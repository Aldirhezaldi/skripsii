                    {# <td>{{dataset}}</td> #}
                </tr>
            {# {% else %} #}
            {% endfor %}
                <tr>
                    <td colspan="0">{{ 'no_records_found'|trans }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="col-lg-2">
        {{ include('data_training/_max_per_page.html.twig', {url: 'app_data_training_index'}) }}
    </div>
    <div class="pull-right">
        <style>
            .pagination {
                margin : 0px;
