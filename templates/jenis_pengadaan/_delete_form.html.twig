<form method="post" action="{{ path('app_jenis_pengadaan_delete', {'id': jenis_pengadaan.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ jenis_pengadaan.id) }}">
    <button class="btn btn-xs btn-outline-danger"><span class="fa fa-trash"></span> {{ 'delete'|trans }}</button>
</form>
