<form method="post" action="{{ path('app_data_training_delete', {'id': data_training.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ data_training.id) }}">
    <button class="btn btn-xs btn-outline-danger"><span class="fa fa-trash"></span> {{ 'delete'|trans }}</button>
</form>
